{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "types": ["node"],
    "strict": true,
    "noEmit": true,
    "downlevelIteration": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@exodus/lerna-utils": ["./node_modules/@exodus/lerna-utils"],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
